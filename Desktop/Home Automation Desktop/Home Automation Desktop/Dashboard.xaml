<Window x:Class="Home_Automation_Desktop.Dashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Home_Automation_Desktop"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="850"  AllowsTransparency="True"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        Background="Transparent">
    <Window.Resources>
        <!-- Button Style -->
        <Style x:Key="CustomButtonStyle" TargetType="Button">
            <Setter Property="FontFamily" Value="Segoe UI" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Background" Value="#3E454D" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Height" Value="45" />
            <Setter Property="Margin" Value="10" />
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="10" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#556A7F" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#2D3944" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Title TextBlock Style -->
        <Style x:Key="TitleTextStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI" />
            <Setter Property="FontSize" Value="24" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Foreground" Value="White" />
        </Style>
    </Window.Resources>
    <Grid>
        <!-- Background Border -->
        <Border Background="#212529" CornerRadius="20">
            <!-- Main Content -->
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="60"/>
                    <!-- Title Bar -->
                    <RowDefinition />
                    <!-- Main Content -->
                </Grid.RowDefinitions>

                <!-- Title Bar -->
                <Border Background="#556A7F" CornerRadius="20,20,0,0" Grid.Row="0">
                    <DockPanel LastChildFill="True" Margin="10,0">
                        <!-- Close Button -->
                        <Button Content="X" Width="30" Height="30" 
                                Background="Transparent" Foreground="White" 
                                FontWeight="Bold" 
                                VerticalAlignment="Center" HorizontalAlignment="Right"
                                BorderBrush="Transparent"
                                Click="CloseButton_Click" />
                        <!-- Title Text -->
                        <TextBlock Text="Home Automation Dashboard" 
                                   Style="{StaticResource TitleTextStyle}" 
                                   VerticalAlignment="Center" 
                                   HorizontalAlignment="Center"
                                   DockPanel.Dock="Left"/>
                    </DockPanel>
                </Border>

                <!-- Main Content -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="228" ></ColumnDefinition>
                        <!-- Left Column -->
                        <ColumnDefinition Width="622"></ColumnDefinition>
                        <!-- Right Column -->
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>

                    <Grid HorizontalAlignment="Left" Width="228">
                        <Border Background="#272B2F" CornerRadius="20,0,0,20" Margin="0,0,-5,-108"/>
                        <StackPanel Width="228" Margin="5,71,-5,100">
                            <Button Content="Add" Style="{StaticResource CustomButtonStyle}" Click="Add" />
                            <Button Content="Lights" Style="{StaticResource CustomButtonStyle}" />
                            <Button Content="Button" Style="{StaticResource CustomButtonStyle}" />
                            <Button Content="Button" Style="{StaticResource CustomButtonStyle}" />
                        </StackPanel>
                    </Grid>
                </Grid>
            </Grid>
        </Border>
        <DataGrid x:Name="deviceGrid" Background="White"
                  AutoGenerateColumns="True"
                  Margin="237,60,0,0" />


    </Grid>
</Window>
